        <script src="http://code.jquery.com/jquery-2.1.1.min.js"></script>
        <script type="text/javascript">
            $(document).ready(function(){
                //alert($("faq").offset().top);
                $(window).on("scroll", function(){
                    var top = 20;
                        
                    if(($(".faq").offset().top - top) <= $(window).scrollTop()) {
                        var left = $(".faq .faq-menu").offset().left;
                        
                        $(".faq .faq-menu").addClass("fixed").css({
                            "top": top,
                            "left": left
                        });
                    } else {
                        $(".faq .faq-menu").removeClass('fixed').css({
				'left': 0,
				'top': 0,
			});
                    }
                });
            });
        </script>
